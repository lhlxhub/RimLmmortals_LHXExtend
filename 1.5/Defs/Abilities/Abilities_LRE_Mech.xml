    <!-- 单机械体战斗加强 -->
    <AbilityDef ParentName="LRE_MechAbilityBase">
		<defName>LRE_Ability_MechFightingCore</defName>
		<label>Mech Fighting Core</label>
		<!-- 虎印敕封 -->
		<description>Qi cost: 200.\n\nIncrease the working speed and reduce the resistance to hitting.</description>
		<!-- 修仙者已经离锈仙越来越近，锈仙赐予它最忠诚的信仰者。 -->
		<iconPath>LRESkill/Common/work_speed</iconPath>
		<displayGizmoWhileUndrafted>False</displayGizmoWhileUndrafted>
		<disableGizmoWhileUndrafted>True</disableGizmoWhileUndrafted>
        <casterMustBeCapableOfViolence>True</casterMustBeCapableOfViolence>
		<targetRequired>True</targetRequired>
		<canUseAoeToGetTargets>False</canUseAoeToGetTargets>
		<cooldownTicksRange>300</cooldownTicksRange>
		<verbProperties>
			<range>20</range>
			<drawAimPie>true</drawAimPie>
			<requireLineOfSight>true</requireLineOfSight>
			<warmupTime>0.5</warmupTime>
			<targetParams>
				<canTargetSelf>false</canTargetSelf>
				<canTargetPawns>true</canTargetPawns>
				<canTargetBuildings>false</canTargetBuildings>
				<canTargetAnimals>false</canTargetAnimals>
				<canTargetHumans>false</canTargetHumans>
				<canTargetMechs>true</canTargetMechs>
			</targetParams>
		</verbProperties>
		<comps>
			<li Class="CompProperties_AbilityGiveHediff">
				<compClass>RimLmmortals_LHXExtend.LRE_CompAbilityEffect.CompAbilityEffect_GiveHediffMech</compClass>
				<hediffDef>LRE_MechPowerUpHediff</hediffDef>
				<psychic>True</psychic>
				<replaceExisting>True</replaceExisting>
				<applyToTarget>False</applyToTarget>
			</li>
			<li Class="RimLmmortals_LHXExtend.LRE_Ability.LRE_MechlinkImplantAbilityReduceEnergy">
				<rEnergy>-200</rEnergy>
				<isCommon>true</isCommon>
			</li>
		</comps>
	</AbilityDef>
