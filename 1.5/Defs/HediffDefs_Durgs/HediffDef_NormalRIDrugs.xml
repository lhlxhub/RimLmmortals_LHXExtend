<Defs>
    <!-- 青玉仙丹的buff-->
    <HediffDef>
		<defName>LRE_JadeLiquidPillHediff</defName>
		<label>Jade Liquid Pill Hediff</label>
		<hediffClass>HediffWithComps</hediffClass>
		<description>Jade Liquid Pill Hediff.</description>
		<scenarioCanAdd>false</scenarioCanAdd>
		<isBad>false</isBad>
		<comps>
            <!-- 修炼进度-->
			<li Class = "RimLmmortals_LHXExtend.Properties.ComProperties_ChangeValueByComps">
				<compClass>Rimlmmortals_LHXExtend.HediffComps.HediffComp_LRE_AddExpHediff</compClass>
				<fValue>400</fValue>
			</li>
            <li Class="HediffCompProperties_Disappears">
				<showRemainingTime>true</showRemainingTime>
				<disappearsAfterTicks>60000</disappearsAfterTicks>
			</li>
		</comps>
		<stages>
			<li>
				<statFactors>
					<GI_EnergyGainEff>1.5</GI_EnergyGainEff>
				</statFactors>
			</li>
		</stages>
	</HediffDef>
