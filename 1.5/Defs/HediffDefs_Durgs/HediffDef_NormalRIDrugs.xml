<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <!-- 青玉仙丹的buff-->
    <HediffDef>
		<defName>LRE_JadeLiquidPillHediff</defName>
		<label>Jade Liquid Pill Hediff</label>
		<hediffClass>HediffWithComps</hediffClass>
		<description>Jade Liquid Pill Hediff.</description>
		<scenarioCanAdd>false</scenarioCanAdd>
		<isBad>false</isBad>
		<comps>
            <!-- 修炼进度-->
			<li Class = "RimLmmortals_LHXExtend.HediffComps.HediffComp_AddInExpStored">
				<fValue>200</fValue>
			</li>
            <li Class="RimLmmortals_LHXExtend.Properties.HediffComProperties_InstallRoot">
                <onceAddSeverity>0.4</onceAddSeverity>
                <canMaxSeverity>0.99</canMaxSeverity>
                <bodyPart>Brain</bodyPart>
                <canUpgrade>true</canUpgrade>
            </li>
            <li Class = "RimLmmortals_LHXExtend.HediffComps.HediffComp_AddHediff">
                <hediffDef>LRE_EnergyGainEffHediff</hediffDef>
                <severity>3</severity>
                <getMax>true</getMax>
            </li>
			<li Class="HediffCompProperties_Disappears"/>
		</comps>

	</HediffDef>
