<?xml version="1.0" encoding="UTF-8"?>
<Defs>
    <!-- 灵石发电机 -->
    <!-- 科技：电力,高等灵气学,特点: 无燃料发少量电(100),有燃料发大量电(2100),不被EMP影响,建造需要灵石,修仙的特殊钢材,零部件 -->
    <ThingDef ParentName="BuildingBase">
        <defName>SpiritualCrystalGenerator</defName>
        <!-- 名称：灵石发电机 -->
        <label>Spiritual Crystal Generator</label>
        <!-- 描述： 一台仙道与现代科技结合的发电机，就算没有燃料，也能通过燃烧空气中的灵气产生少量电力。 -->
        <description>A generator that combines immortal dao and modern technology can generate a small amount of electricity by burning the aura in the air, even if there is no fuel.</description>
        <thingClass>Building</thingClass>
        <drawerType>MapMeshAndRealTime</drawerType>
        <!-- 美术绘制 -->
        <graphicData>
            <texPath>Things/Building/Power/WoodFiredGenerator</texPath>
            <graphicClass>Graphic_Single</graphicClass>
            <drawSize>(2,2)</drawSize>
            <shadowData>
                <volume>(1.93,1,1.69)</volume>
                <offset>(-0.03,0,-0.1)</offset>
            </shadowData>
        </graphicData>
        <!-- 高度层级 -->
        <altitudeLayer>Building</altitudeLayer>
        <!-- 通过规则 -->
        <passability>PassThroughOnly</passability>
        <!-- 填充百分比 -->
        <fillPercent>0.9</fillPercent>
        <!-- ai穿过成本 -->
        <pathCost>50</pathCost>
        <!-- 可旋转性 -->
        <rotatable>false</rotatable>
        <!-- 挡风 -->
        <blockWind>true</blockWind>
        <!-- 边缘阴影 -->
        <castEdgeShadows>false</castEdgeShadows>
        <!-- 一些属性 -->
        <statBases>
            <!-- 生命值 -->
            <MaxHitPoints>600</MaxHitPoints>
            <!-- 建造工作量 -->
            <WorkToBuild>2500</WorkToBuild>
            <!-- 易燃性 -->
            <Flammability>1.0</Flammability>
            <!-- 美观度 -->
            <Beauty>-20</Beauty>
        </statBases>
        <!-- 时钟类型 -->
        <tickerType>Normal</tickerType>
        <!-- 可否和储存区堆叠 -->
        <canOverlapZones>false</canOverlapZones>
        <!-- 长宽 -->
        <size>(2,2)</size>
        <building>
            <!-- 损坏音效 -->
            <destroySound>BuildingDestroyed_Metal_Medium</destroySound>
        </building>
        <!-- 建造成本 -->
        <costList>
            <RI_Resource_BlackSteel>10</RI_Resource_BlackSteel>
            <RI_Resource_SpiritualCrystal>20</RI_Resource_SpiritualCrystal>
            <Steel>80</Steel>
            <ComponentIndustrial>1</ComponentIndustrial>
        </costList>
        <comps>
            <!-- 发电脚本 -->
            <li Class="CompProperties_Power">
                <compClass>RimLmmortals_LHXExtend.LRE_CompPowerTrader.CompPowerPlantSpiritualCrystal</compClass>
                <basePowerConsumption>-2500</basePowerConsumption>
                <transmitsPower>true</transmitsPower>
                <!-- 发电机有音效？ -->
                <soundAmbientProducingPower>WoodFiredGenerator_Ambience</soundAmbientProducingPower>
            </li>
            <li Class="CompProperties_Flickable"/>
            <!-- 消耗燃料脚本 -->
            <li Class="CompProperties_Refuelable">
                <fuelConsumptionRate>8.0</fuelConsumptionRate>
                <fuelCapacity>100.0</fuelCapacity>
                <fuelFilter>
                    <thingDefs>
                        <li>RI_Resource_SpiritualCrystal</li>
                    </thingDefs>
                </fuelFilter>
                <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
            </li>
            <!-- 发电发光 -->
            <li Class="CompProperties_Glower">
                <glowRadius>7</glowRadius>
                <glowColor>(104,199,156,0)</glowColor>
            </li>
            <li Class="CompProperties_HeatPusher">
                <compClass>CompHeatPusherPowered</compClass>
                <heatPerSecond>0</heatPerSecond>
            </li>
            <li Class="CompProperties_Breakdownable"/>
        </comps>
        <!-- 需要的地形 -->
        <terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
        <!-- 建筑分类 -->
        <designationCategory>Power</designationCategory>
        <!-- UI排序 -->
        <uiOrder>2100</uiOrder>
        <!-- 热键 -->
        <designationHotKey>Misc3</designationHotKey>
        <!-- 结构效果 -->
        <constructEffect>ConstructMetal</constructEffect>
        <!-- 研究要求 -->
        <researchPrerequisites>
            <li>RI_SpiritualRevolution</li>
            <li>Electricity</li>
        </researchPrerequisites>
        <!-- 建造需要的技能要求 -->
        <constructionSkillPrerequisite>6</constructionSkillPrerequisite>
    </ThingDef>
</Defs>